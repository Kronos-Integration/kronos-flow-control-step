{
  "name": "kronos-flow-control-step",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/flow-control.js",
  "module": "src/flow-control.js",
  "description": "Step to perform flow controlling actions like load delete stop start",
  "keywords": [
    "kronos-step"
  ],
  "contributors": [
    {
      "name": "Torsten Link",
      "email": "torstenlink@gmx.de"
    },
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "cover": "c8 -x 'tests/**/*.mjs' --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "doc": "./node_modules/.bin/jsdoc lib/*.js",
    "docs": "documentation readme src/flow-control.js --section=API",
    "lint": "documentation lint src/flow-control.js",
    "posttest": "npm run prepare && markdown-doctest",
    "prepare": "rollup -c",
    "test": "ava"
  },
  "dependencies": {
    "kronos-endpoint": "^2.15.0",
    "kronos-step": "^5.7.0"
  },
  "devDependencies": {
    "ava": "^2.2.0",
    "builtin-modules": "^3.1.0",
    "c8": "^5.0.2",
    "documentation": "^12.1.0",
    "esm": "^3.2.25",
    "kronos-flow": "^2.5.40",
    "kronos-interceptor-decode-json": "^1.1.0",
    "kronos-service-manager": "^3.5.1",
    "kronos-step-stdio": "^3.0.18",
    "kronos-test-step": "3.1.4",
    "markdown-doctest": "^0.9.1",
    "rollup": "^1.18.0",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-executable": "^1.5.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "semantic-release": "^15.13.19"
  },
  "engines": {
    "node": ">=10.16.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kronos-Integration/kronos-flow-control-step.git"
  },
  "bugs": {
    "url": "https://github.com/Kronos-Integration/kronos-flow-control-step/issues"
  },
  "homepage": "https://github.com/Kronos-Integration/kronos-flow-control-step#readme",
  "ava": {
    "files": [
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  }
}
